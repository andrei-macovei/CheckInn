<div class="container border rounded-full bg-slate-200 mt-4 mx-auto">
    <form id="searchbox-form" method="GET" action="/search" class="flex flex-row justify-center items-center gap-1 my-4">
        <div class="flex flex-col">
            <label class="font-semibold">Destination:</label>
            <input id="inp-city" type="text" name="city" value="<%-locals.city ? locals.city : ""%>" placeholder="Where to?" class="h-10 focus:ring-sky-500">
        </div>
        <div class="flex flex-col">
            <label class="font-semibold">Starting:</label>
            <input id="inp-checkin" type="date" name="checkin" value="<%-locals.checkin ? locals.checkin : "" %>" placeholder="Check-in date" 
            class="h-10 focus:ring-sky-500">
        </div>
        <div class="flex flex-col">
            <label class="font-semibold">Until:</label>
            <input id="inp-checkout" type="date" name="checkout" value="<%-locals.checkout ? locals.checkout : ""%>" placeholder="Check-out date"
            class="h-10 focus:ring-sky-500">
        </div>
        <div class="flex flex-col">
            <label class="font-semibold">Guests:</label>
            <input id="inp-guests" type="number" min="0" name="guests" value="<%-locals.guests ? locals.guests : ""%>" placeholder="How many?" class="h-10 focus:ring-sky-500">
        </div>
        <div class="flex flex-col">
            <label class="invisible">invisible</label>
            <button type="submit" class="btn-primary py-2 bg-blue-500">Search</button>
        </div>
    </form>
</div>