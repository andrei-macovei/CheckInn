<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="keywords" content="">
        <meta name="description" content="">

        <title>CheckInn Home</title>
        <%-include("../fragments/head.ejs")%>
    </head>
    <body>
        <%-include("../fragments/header.ejs")%>
        <main class="px-20">
            <!-- searchbox -->
            <div class="container border rounded-full bg-slate-200 my-4 mx-auto">
                <form class="flex flex-row justify-center items-center gap-1 my-4">
                    <div class="flex flex-col">
                        <label>Destination:</label>
                        <input type="text" placeholder="Where to?" class="">
                    </div>
                    <div class="flex flex-col">
                        <label>Starting:</label>
                        <input type="date" placeholder="Check-in date" 
                        class="">
                    </div>
                    <div class="flex flex-col">
                        <label>Until:</label>
                        <input type="date" placeholder="Check-out date"
                        class="">
                    </div>
                    <div class="flex flex-col">
                        <label>Guests:</label>
                        <input type="number" placeholder="How many?" class="">
                    </div>
                    <div class="flex flex-col">
                        <label class="invisible">invisible</label>
                        <button type="submit" class="align-bottom btn-primary">Search</button>
                    </div>
                </form>
            </div>

            <div>
                <h2 class="font-bold text-xl pt-4">Inspiration for your next trip</h2>
            </div>
            <div>
                <% if (locals.user) { %>
                    <%- locals.user.firstname %>
                    <%- locals.user.lastname %>
                <% } %>
            </div>
        </main>
    </body>
</html>