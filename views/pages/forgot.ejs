<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="keywords" content="">
        <meta name="description" content="">

        <title>CheckInn Home</title>
        <%-include("../fragments/head.ejs")%>
    </head>
    <body>
        <%-include("../fragments/header.ejs")%>
        <main class="px-20">
            <div class="px-20 justify-center mx-auto min-w-fit">
                <form method="POST" action="/users/sendResetEmail">
                    <div class="flex flex-col gap-6 justify-center p-10 border mt-20">
                        <h1 class="text-3xl mx-auto">Reset your password</h1>
                        <p class="mx-auto">Enter the e-mail associated with your account and we will send you a link to reset</p>
                        <div class="mx-auto">
                            <label>E-mail address:</label><br>
                            <input name="email"type="text" placeholder="E-mail" class="inp-basic">
                        </div>
                        <div class="mx-auto">
                            <% if(locals.msg) { %>
                                <p class="text-red-600">
                                    <%- locals.msg %> 
                                </p>
                            <% } %>
                        </div>
                        <button type="submit" class="btn-primary">Send reset link</button>
                    </div>
                </form>
            </div>
        </main>
    </body>
</html>